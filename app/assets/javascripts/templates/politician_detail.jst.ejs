<div class="row">
  <div class="large-4 columns">
    <div class="row">
      <img src="<%= photo_url %>" class="large-centered columns" id="detail-img">
    </div>
    <div class="row">
  		<h3 class="large-8 columns"> <%= title %> <%= firstname %> <%= lastname %> (<%= party %>)</h3>
      <span id="hide-bio"><%=bioguide_id%></span>
    </div>
    <div class="row">
      <div class="large-centered columns">
    		<div class="row">
    			<p><%= bio %></p>
    		</div>
        <div class="row">
          <h4>Contact</h4>
          <% if (oc_email) {%>
          <a href="mailto:"<%= oc_email %>><%= oc_email %> </a>
          <%} %>
        </div>
      </div>
  	</div>
    <div class="row">
      <ul class="tabs vertical" data-tab>
        <li class="tab-title active"><a href="#panel11">Top Contributions By Sector</a></li>
        <li class="tab-title"><a href="#panel21">Contributor Types</a></li>
        <li class="tab-title"><a href="#panel31">Sponsored Legislation</a></li>
        <li class="tab-title"><a href="#panel41">Top Contributions By Industry</a></li>
        <li class="tab-title"><a href="#panel51">Top Contributors</a></li>
      </ul>
    </div>
  </div>

  <div class="large-8 columns">
    <div class="tabs-content">
      <div class="content active" id="panel11">
        <div id="sector-chart"></div>
      </div>
      <div class="content" id="panel21">
        <div id="contributor-types"></div>
      </div>
      <div class="content" id="panel31">
          <div id="bills-listing"></div>
      </div>
      <div class="content" id="panel41">
        <div id="industry-chart"></div>
      </div>
      <div class="content" id="panel51">
        <div id="top-contributor"></div>
      </div>
    </div>
  </div>
</div>
